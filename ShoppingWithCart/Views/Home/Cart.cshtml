@model IEnumerable<ShoppingWithCart.ViewModel.ProductDetailsVM>
@{
    ViewBag.Title = "Cart";
}

<h2>Your Cart</h2>
<section class="content">
    @if (Model.Count() != 0)
    {
        foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-9 col-lg-12">
                    <div class="box box-success">
                        <div class="box-header with-border">
                            <h3 class="box-title">@item.productName</h3>
                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="remove" onclick="RemoveFromCart(@item.productId)"><i class="fa fa-times"></i></button>
                            </div><!-- /.box-tools -->
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <div style="padding-left: 30px;">
                                <div class="row">
                                    Description : @item.description
                                </div>
                                <div class="row">
                                    Quantity : @item.Quantity
                                </div>
                            </div>

                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        }
        <a href="/Home/PlaceOrder" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored">Place Order </a>
    }
    else
    {
        <h3>Your Cart is Empty</h3>
    }

</section>
